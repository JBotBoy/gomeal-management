

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <i class="fas fa-exclamation-triangle fa-5x text-warning mb-4"></i>
            <h1 class="display-4">Oops!</h1>
            <p class="fs-3"><span class="text-danger">Error:</span> Something went wrong.</p>
            <p class="lead">We're sorry, but something went wrong on our end.</p>
            <% if (process.env.NODE_ENV === 'development' && error) { %>
                <div class="alert alert-danger text-start mt-4">
                    <h6>Error Details (Development Mode):</h6>
                    <pre><%= error.stack || error.message || error %></pre>
                </div>
            <% } %>
            <a href="/" class="btn btn-primary">
                <i class="fas fa-home me-1"></i>Go Home
            </a>
        </div>
    </div>
</div>